# Make Vim the default editor
export EDITOR=vim
export VISUAL='vim'
export DEFAULT_USER="jamie"
# Keep public, versioned executables in ~/dotfiles/bin
export PATH=$HOME/dotfiles/bin:$PATH:
# Shortcut to aliases
export ALIASES=$HOME/.aliases
# Bash-specific aliases
export BASH_ALIASES=$HOME/.bash_aliases
# Path to dotfiles repo (just set it to $HOME if you don't have one)
export DOTFILES=$HOME/dotfiles

